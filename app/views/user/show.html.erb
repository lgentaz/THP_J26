<header>
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand">The Gossip Project</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Accueil", root_path, class: "nav-link active"%>
      </li>
      <li class="nav-item">
        <%= link_to "L'équipe", team_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Contact", contact_path, class: "nav-link"%>
      </li>
    </ul>
  </div>
</nav>
</header>

<div class="container">
  <div class="card my-5">
    <%single_user = User.find(params[:id])%>
    <div class="card-header">
      Bavard n°<%= single_user.id %>
    </div>
    <div class="card-body py-2 row">
      <img src="<%=Faker::Avatar.image%>" class="img-thumbnail col-sm-3">
      <h1 class="card-title col-sm-8 text-center">
        <br><span class="text-warning">Nom :  </span><%= single_user.first_name%> <%= single_user.last_name%> <br> <br>
        <small><span class="text-warning">Email :  </span><%= single_user.email%></small>
      </h1>
    </div>
    <div class="card-footer text-muted">
    <%user_city = single_user.city%>
      en direct de <%= user_city.name%>
    </div>
  </div>
</div>



