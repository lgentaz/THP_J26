<header>
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand">The Gossip Project</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Accueil", root_path, class: "nav-link active"%>
      </li>
      <li class="nav-item">
        <%= link_to "L'équipe", team_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Contact", contact_path, class: "nav-link"%>
      </li>
    </ul>
  </div>
</nav>
</header>

<div class="container">
  <div class="card my-5">
    <div class="card-header">
      Gossip n°<%= @gossip.id %>
    </div>
    <div class="card-body py-5">
      <h1 class="card-title text-center">
        <span class="font-weight-bold"><%= @gossip.title%></span>
        <small> by 
        <a href="/user/<%= @gossip.user.id %>"><%= @gossip.user.first_name%> <%= @gossip.user.last_name%></a>
        </small>
      </h1>
      <h5 class="card-text pt-5 px-2"><%= @gossip.content%></h5>    
    </div>
    <div class="card-footer text-muted text-right">
      publié le <%= @gossip.created_at.strftime("%d/%m/%Y") %>
    </div>
  </div>
</div>

